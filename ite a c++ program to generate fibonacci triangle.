ite a c++ program to generate fibonacci triangle.
#include<iostream.h>
#include<conio.h>
int main()
{
clrscr();
  int a=0,b=1,i,c,n,j;
cout<<"Enter the limit: ";
cin>>n;
for(i=1; i<=n; i++)
    {
	a=0;
	b=1;
	cout<<b<<"\t";
	for(j=1; j<i; j++)
	{
	    c=a+b;
	cout<<c<<"\t";
	    a=b;
	    b=c;
	}
	cout<<"\n";
    }
getch();
}
